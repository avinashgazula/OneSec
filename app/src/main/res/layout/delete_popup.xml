<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtDeleteConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete?"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDeleteConfirmation"
        android:layout_centerHorizontal="true">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteConfirm"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textSize="15dp"
            android:layout_marginTop="10px"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Yes"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteCancel"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_toRightOf="@+id/btnDeleteConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textSize="15dp"
            android:layout_marginTop="10px"
            android:text="No"/>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_layout">

        <ImageView
            android:id="@+id/imgFavicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgFavicon"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/txtValueName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:text="dummy text" />

            <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtValueName"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:layout_marginLeft="30dp"
                android:text="Login" />

        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:text="username" />

    <EditText
        android:id="@+id/txtValueUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:text="@string/dummy_name" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtValueUsername"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:text="password" />

    <EditText
        android:id="@+id/txtValuePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPassword"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:text="@string/dummy_name" />

    <TextView
        android:id="@+id/txtWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtValuePassword"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:text="website" />

    <EditText
        android:id="@+id/txtValueWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWebsite"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:text="@string/dummy_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdateCredentials"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_below="@id/txtValueWebsite"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textSize="15dp"
        android:layout_marginTop="10px"
        android:text="SAVE"/>
</RelativeLayout>